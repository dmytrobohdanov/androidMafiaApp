<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/holder_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/rv_margin"
    android:layout_marginRight="@dimen/rv_margin"
    android:layout_marginTop="@dimen/rv_margin_top"
    android:elevation="2dp"
    app:cardCornerRadius="2dp"
    card_view:cardBackgroundColor="@color/players_list_cardview_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/rv_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rv_holder_players_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/players_list_cardview_text_name_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rv_holder_players_alias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alias name"
            android:textColor="@color/players_list_cardview_text_alias_color" />
    </LinearLayout>
</android.support.v7.widget.CardView>
